                            th
                                .td-div Amount
                            th
                                .td-div Time of Order
                            th
                                .td-div Date of Order
                            th
                                .td-div Ready
                            th
                                .td-div Actions
                        tr
                            td
                                .td-div 1
                            td
                                .td-div Coca-Cola
                            td
                                .td-div Dinner
                            td
                                .td-div 100
                            td
                                .td-div 10.08.2020
                            td
                                .td-div 20.08.2020
                            td.table-ready
                                input(type='checkbox')
                            td.table-actions
                                button.table-button Print
                                button.table-button Details

