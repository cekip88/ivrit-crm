        page_title= 'Company'
block content
    main
        aside.nav
            nav
                ul.nav-list
                    li.nav-item
                        a(href='/') Dashboard main
                    li.nav-item
                        a(href='#') Meals
                            include ../img/arrow.svg
                        .nav-item-hidden
